{
  "description": "Mustache templating for the Yii Framework.",
  "homepage": "https://github.com/cedx/yii2-mustache",
  "name": "cedx/yii2-mustache",

  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "yii2-extension",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"yii\\mustache\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "mustache",
    "renderer",
    "templating",
    "view",
    "yii2"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "mustache/mustache": "^2.11.1",
    "yiisoft/yii2": "^2.0.11"
  },
  "require-dev": {
    "cedx/coveralls": "^0.4.0",
    "cedx/phpunit-expect": "^0.1.0",
    "phing/phing": "^2.16.0",
    "phpdocumentor/phpdocumentor": "^2.9.0"
  },
  "scripts": {
    "coverage": "coveralls --file=var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "issues": "https://github.com/cedx/yii2-mustache/issues"
  }
}
