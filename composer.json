{
  "description": "Mustache templating for the Yii Framework.",
  "homepage": "https://github.com/cedx/yii2-mustache",
  "name": "cedx/yii2-mustache",

  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "library",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"yii\\mustache\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "mustache",
    "renderer",
    "templating",
    "view",
    "yii2"
  ],
  "require": {
    "php": ">=7.0.0",
    "mustache/mustache": "^2.11.1",
    "yiisoft/yii2": "^2.0.11"
  },
  "require-dev": {
    "phing/phing": "^2.16.0",
    "phpdocumentor/phpdocumentor": "^2.9.0",
    "phpmd/phpmd": "^2.6.0",
    "phpunit/phpunit": "^5.7.11",
    "satooshi/php-coveralls": "^1.0.1"
  },
  "scripts": {
    "coverage": "coveralls --coverage_clover=var/coverage.xml",
    "test": "phpunit"
  },
  "support": {
    "issues": "https://github.com/cedx/yii2-mustache/issues"
  }
}
